<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.smartipc.shm.creation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name="com.android.smartipc.shm.creation.SHMCreationApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartIPC">
        <activity android:name="com.android.smartipc.shm.creation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <service android:name="com.android.smartipc.rtrepo.RepositoryServiceImpl"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.smartipc.rtrepo.RepositoryServiceImpl"/>
            </intent-filter>
        </service>

    </application>

</manifest>